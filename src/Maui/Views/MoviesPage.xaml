<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Maui.ViewModels"
             xmlns:model="clr-namespace:Maui.Models"
             x:DataType="viewmodel:MovieViewModel"
             x:Class="Maui.Views.MoviesPage">

    <Grid RowDefinitions="Auto, *"
          ColumnDefinitions="*"
          RowSpacing="5"
          Padding="10">

        <Label Text="Movies" 
               Grid.Row="0" 
               FontSize="24" 
               HorizontalOptions="Center" />

        <RefreshView Grid.Row="1" 
                     Command="{Binding LoadMoviesCommand}"
                     IsRefreshing="{Binding IsLoading}">
            
            <CollectionView ItemsSource="{Binding Movies}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Movie">
                        <Label Text="{Binding Title}" Padding="0,10" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
        </RefreshView>

    </Grid>
</ContentPage>