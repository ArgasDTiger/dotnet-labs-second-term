<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Maui.Features.Clients.Models"
             xmlns:viewModels="clr-namespace:Maui.Features.Clients.ViewModels"
             x:DataType="viewModels:ClientViewModel"
             x:Class="Maui.Features.Clients.Views.ClientsPage">

    <Grid RowDefinitions="Auto, *"
          ColumnDefinitions="*"
          RowSpacing="5"
          Padding="10">

        <Label Text="Clients"
               Grid.Row="0"
               FontSize="24"
               HorizontalOptions="Center" />

        <RefreshView Grid.Row="1"
                     Command="{Binding LoadClientsCommand}"
                     IsRefreshing="{Binding IsLoading}">

            <CollectionView ItemsSource="{Binding Clients}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Client">
                        <Label Text="{Binding FirstName}" Padding="0,10" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </RefreshView>

    </Grid>
</ContentPage>