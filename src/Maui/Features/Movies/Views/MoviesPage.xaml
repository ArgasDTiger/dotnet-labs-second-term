<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Maui.Features.Movies.Models"
             xmlns:viewModels="clr-namespace:Maui.Features.Movies.ViewModels"
             x:DataType="viewModels:MovieViewModel"
             x:Class="Maui.Features.Movies.Views.MoviesPage">

    <Grid RowDefinitions="Auto, *"
          ColumnDefinitions="*"
          RowSpacing="5"
          Padding="10">

        <Button Grid.Row="0" 
                Text="+ Create Movie" 
                Command="{Binding GoToCreateMovieCommand}" 
                BackgroundColor="{StaticResource Primary}"
                HorizontalOptions="Fill" />

        <RefreshView Grid.Row="1"
                     Command="{Binding LoadMoviesCommand}"
                     IsRefreshing="{Binding IsLoading}">

            <CollectionView ItemsSource="{Binding Movies}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Movie">
                        <VerticalStackLayout
                            Padding="10"
                            Margin="5"
                            BackgroundColor="{StaticResource Gray600}"
                            VerticalOptions="Center">
                            <VerticalStackLayout.Resources>
                                <ResourceDictionary>
                                    <Style TargetType="Label">
                                        <Setter Property="TextColor" Value="{StaticResource Gray200}"/>
                                        <Setter Property="FontSize" Value="16"/>
                                    </Style>
                                </ResourceDictionary>
                            </VerticalStackLayout.Resources>
                            <Label
                                Text="{Binding Title}"
                                FontSize="18"
                                FontAttributes="Bold"
                                HorizontalTextAlignment="Center" />
                            <Label
                                HorizontalTextAlignment="Center"
                                Text="{Binding Description}" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" /> 
                                    <ColumnDefinition Width="*" /> 
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" /> 
                                    <RowDefinition Height="Auto" /> 
                                </Grid.RowDefinitions>

                                <Label
                                    Grid.Column="0"
                                    Grid.Row="0"
                                    Text="Collateral Value:"
                                    HorizontalOptions="Start" />
                                <Label
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    Text="{Binding CollateralValue, StringFormat='${0}'}"
                                    HorizontalOptions="End" />

                                <Label
                                    Grid.Column="0"
                                    Grid.Row="1"
                                    Text="Price Per Day:"
                                    HorizontalOptions="Start" />
                                <Label
                                    Grid.Column="1"
                                    Grid.Row="1"
                                    Text="{Binding PricePerDay, StringFormat='${0}'}"
                                    HorizontalOptions="End" />
                            </Grid>
                            <Grid ColumnDefinitions="*,*">
                                <Button Grid.Column="0" 
                                        Text="Update" 
                                        BackgroundColor="Bisque" 
                                        TextColor="Black"
                                        CommandParameter="{Binding .}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MovieViewModel}}, Path=GoToUpdateMovieCommand}" />
                                <Button Grid.Column="1"  
                                        Text="Delete" 
                                        BackgroundColor="Red"
                                        CommandParameter="{Binding .}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MovieViewModel}}, Path=DeleteMovieCommand}" />
                            </Grid>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </RefreshView>

    </Grid>
</ContentPage>
