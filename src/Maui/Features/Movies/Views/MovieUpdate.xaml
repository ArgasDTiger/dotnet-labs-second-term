<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Maui.Features.Movies.ViewModels"
             x:DataType="viewModels:MovieUpdateViewModel"
             x:Class="Maui.Features.Movies.Views.MovieUpdatePage"
             Shell.NavBarIsVisible="True"
             Title="{Binding PageTitle}">
    
    <ContentPage.Resources>
        <!-- Styles for this form -->
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource Gray200}" />
            <Setter Property="Margin" Value="0,10,0,5" />
        </Style>
        <Style TargetType="Entry">
            <Setter Property="TextColor" Value="{StaticResource White}" />
            <Setter Property="BackgroundColor" Value="{StaticResource Gray600}" />
        </Style>
        <Style TargetType="Editor">
            <Setter Property="TextColor" Value="{StaticResource White}" />
            <Setter Property="BackgroundColor" Value="{StaticResource Gray600}" />
            <Setter Property="HeightRequest" Value="120" />
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="5">

            <Label Text="Title" />
            <Entry Text="{Binding Title}" />

            <Label Text="Description" />
            <Editor Text="{Binding Description}" AutoSize="Disabled" />

            <Label Text="Collateral Value" />
            <Entry Text="{Binding CollateralValue}" Keyboard="Numeric" />

            <Label Text="Price Per Day" />
            <Entry Text="{Binding PricePerDay}" Keyboard="Numeric" />

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                <Button Grid.Column="0"
                        Text="Save"
                        Command="{Binding SaveMovieCommand}"
                        BackgroundColor="{StaticResource Primary}" />
                <Button Grid.Column="1"
                        Text="Cancel"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="{StaticResource Gray600}" />
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
