<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Maui.Views"
    xmlns:views1="clr-namespace:Maui.Features.Movies.Views"
    xmlns:views2="clr-namespace:Maui.Features.Clients.Views">

    <TabBar Shell.NavBarIsVisible="False">
        <ShellContent
            Title="Home"
            Route="HomeRoute"
            ContentTemplate="{DataTemplate views:WelcomePage}"
            Icon="home_icon.svg"/>

        <ShellContent
            Title="Movies"
            Route="MoviesRoute"
            ContentTemplate="{DataTemplate views1:MoviesPage}"
            Icon="movie_icon.svg"/>

        <ShellContent
            Title="Clients"
            Route="ClientsRoute"
            ContentTemplate="{DataTemplate views2:ClientsPage}"
            Icon="client_icon.svg"/>
    </TabBar> 
    
</Shell>